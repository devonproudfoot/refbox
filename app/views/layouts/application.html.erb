<!DOCTYPE html>
<html>
  <head>
    <title>Refbox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to "RefBox", root_path, class: 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? && current_user.spco_staff %>
        <li class="nav-item">
          <%= link_to 'Dashboard', dashboard_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'View Requests', staff_requests_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'View Researchers', staff_users_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Create a request', new_request_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>

      <% elsif user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'Dashboard', dashboard_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Create a request', new_request_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Create an account', new_user_registration_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
    
  </body>
</html>
