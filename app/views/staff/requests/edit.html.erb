<br />
<div class="col-10 offset-1">
  <h1>Update Request</h1>
  <br />
  <%= simple_form_for current_request, :url => staff_request_path(current_request), method: :patch do |f| %>
    <%= f.input :identifier %>
    <%= f.input :title %>
    <%= f.input :creator %>
    <%= f.input :item_number, hint: 'Box or volume number.  Leave as one if the field is not applicable.' %>
    <%= f.input :status, as: :select, collection: Request::STATUSES %>
    <br />
    <%= f.submit "Update", class: 'btn btn-primary' %>
  <% end %>
</div>