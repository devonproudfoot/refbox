<br />
<div>
  <% @requests.each do |request| %>
    <div class="col-10 offset-1 request-box">
      <p><%= link_to request.id, request_path(request) %></p>
      <div class="row">
        <div class="col-3">
          <%= request.identifier %>
        </div>
        <div class="col-3">
          <%= request.title %>
        </div>
        <div class="col-3">
          <%= request.item_number %>
        </div>
      </div>
      <p><b>Status: </b><%= request.status %></p>
    </div>
  <% end %>
</div>